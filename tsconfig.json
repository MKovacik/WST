{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./static/js/dist",
    "rootDir": "./static/js/src",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["DOM", "ES2020"],
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["static/js/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
